/* pages/diancan/waimai/order.wxss */

button {
  position: relative;
  display: block;
  margin-left: 0;
  margin-right: 0;
  padding-left: 0;
  padding-right: 0;
  box-sizing: border-box;
  font-size: 0;
  text-align: none;
  text-decoration: none;
  line-height: none;
  border-radius: 0;
  -webkit-tap-highlight-color: none;
  overflow: hidden;
  color: #000;
  background-color: none;
}

page {
  background: #f5f5f5;
}

.order-info .biz-name {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx #e5e5e5 solid;
  font-size: 30rpx;
  color: #000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.order-way {
  width: 100%;
  height: 100rpx;
  display: flex;
  font-size: 30rpx;
  align-items: center;
  background: #fff;
}

.order-way text {
  margin: 0 30rpx;
  font-size: 30rpx;
  color: #515151;
}

.order-way .item-radio {
  color: #000;
  margin-right: 40rpx;
  font-size: 28rpx;
}

.order-info {
  width: 94%;
  height: auto;
  margin: 0 3%;
  background: #fff;
  display: block;
}

.order-info .order-header {
  width: 90%;
  height: 80rpx;
  display: flex;
  margin: 20rpx 5% 0 5%;
  font-size: 30rpx;
  align-items: center;
  border-bottom: 4rpx dotted #e5e5e5;
  color: #515151;
}

.order-info .order-list {
  width: 90%;
  height: auto;
  display: block;
  margin: 0 5%;
}

.order-info .order-list .item-order {
  width: 100%;
  height: 110rpx;
  /* border-bottom: 2rpx solid #e5e5e5; */
  display: flex;
  align-items: center;
}

.item-order .goods-face {
  width: 80rpx;
  height: 80rpx;
  margin: 15rpx 0;
  background: #eaeaea;
}

.item-order .goods-name {
  width: 100%;
  height: auto;
  flex: 1;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #000;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-order .goods-num {
  margin: 0 20rpx;
  color: #515151;
  font-size: 28rpx;
}

.item-order .goods-price {
  color: #000;
  font-size: 30rpx;
}

.item-menu {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom: 2rpx solid #eaeaea;
}

.item-menu .menu-cont {
  position: absolute;
  right: 0;
  font-size: 28rpx;
  color: #8a8a8a;
}

