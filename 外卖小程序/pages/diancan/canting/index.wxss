/* pages/diancan/canting/index.wxss */
@import "./css/iconfont.wxss";

page {
  background: #fcfcfc;
}

.biz-info {
  width: 100%;
  height: 160rpx;
  background: #333;
  display: flex;
  align-items: center;
}

.biz-info .b-face {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #fff;
  margin: 0 30rpx;
}

.biz-info .b-info {
  width: 100%;
  height: auto;
  display: block;
  flex: 1;
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #fff;
}

.biz-info .b-info .name {
  width: 100%;
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.biz-info .b-info .desc {
  width: 100%;
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #f8f8f8;
}

.menu {
  width: 94%;
  height: auto;
  margin: 20rpx 3%;
  overflow: hidden;
}

.menu .mitem {
  width: 44%;
  height: 100%;
  float: left;
  margin: 30rpx 3%;
  background: #fff;
  border-radius: 10rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx 4rpx rgba(0, 0, 0, 0.08);
}

.menu .mitem .icon {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 25rpx;
}

.menu .mitem .mname {
  width: 100%;
  line-height: 100rpx;
  font-size: 26rpx;
}

/* 弹出css */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 15rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
