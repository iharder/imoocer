/* pages/yuding/index.wxss */
page {
  background: #f5f5f5;
}

.biz-info {
  width: 100%;
  height: 146px;
  display: block;
  background: #ff8040;
  text-align: center;
}

.biz-info .biz-face {
  width: 120rpx;
  height: 120rpx;
  border-radius: 70rpx;
  background: #fff;
  margin-top: 20rpx;
}

.biz-info .biz-name {
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.yue-item {
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-bottom: 2rpx #f8f8f8 solid;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.yue-item .lt {
  width: 160rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  color: #515151;
  margin-left: 30rpx;
}

.yue-item .rt {
  width: 100%;
  height: 100rpx;
  flex: 1;
  display: flex;
  margin-right: 30rpx;
  align-items: center;
}


.yue-item .rt picker{
  width: 100%;
  height: 100rpx;
  flex: 1;
  display: flex;
  align-items: center;
}

.btn-submit {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  background: #ff8040;
  margin-top: 60rpx;
  font-size: 30rpx;
  color: #fff;
}
