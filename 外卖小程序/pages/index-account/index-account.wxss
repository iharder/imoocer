.background {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: #0090ff;
  z-index: -1;
}

/* 头部 */

.header {
  color: #fff;
  padding-left: 20rpx;
  padding-top: 36rpx;
}

.distribution {
  display: inline-block;
  font-size: 34rpx;
  background: #32b7ff;
  padding: 14rpx 20rpx;
  text-align: center;
  border-radius: 26rpx;
}

.address {
  font-size: 40rpx;
  margin-top: 30rpx;
  padding-left: 10rpx;
  font-weight: bold;
  max-width:700rpx;
}

.icon {
  position: relative;
  bottom: 4rpx;
}

.name, .phone {
  font-size: 32rpx;
  padding-left: 10rpx;
  margin-top: 20rpx;
  display: inline-block;
}

.phone {
  padding-left: 20rpx;
}

/* 详情 */

.des {
  width: 720rpx;
  height: 123rpx;
  margin: 40rpx auto 20rpx auto;
  background: #fff;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  position: relative;
  font-weight: bold;
  border-radius: 10rpx;
}

.date {
  padding-left: 34rpx;
}

.date-select {
  color: #32b7ff;
  position: absolute;
  right: 34rpx;
}

/* 列表 */

.list {
  width: 720rpx;
  margin: 20rpx auto;
  background: #fff;
  padding: 42rpx 34rpx 0 34rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-bottom: 400rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.line {
  height: 2rpx;
  background: #f5f5f5;
  width: 100%;
}

.food-image {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
}

.food-image image {
  width: 100%;
  height: 100%;
}

.food-list {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
}

.food-name {
  font-size: 30rpx;
  padding-left: 20rpx;
}

.food-count {
  font-size: 30rpx;
  position: absolute;
  right: 150rpx;
}

.food-sign {
  font-size: 28rpx;
}

.food-price {
  font-size: 32rpx;
}

.price {
  position: absolute;
  top: 34rpx;
  right: 0;
}

.cost {
  height: 40rpx;
  background: #f0f3f6;
  color: #8093af;
  box-sizing: border-box;
  border: 2rpx solid #e9edf1;
  font-size: 24rpx;
  line-height: 40rpx;
  padding: 0 6rpx;
  text-align: center;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.costMan {
  background: #fff4f2;
  color: #cb7470;
  border: 2rpx solid #f9e7e6;
}

.numberMan {
  color: #ff4915;
}

.cost-price {
  position: absolute;
  right: 0;
}

.coupon {
  font-size: 34rpx;
  font-weight: bold;
}

.no-coupon {
  font-size: 30rpx;
  color: #d2d2d7;
}

.useDis {
  position: absolute;
  right: 0;
  display: flex;
  align-items: center;
}

.useDis text {
  font-size: 22rpx;
  background: #ff4915;
  padding: 10rpx;
  color: #fff;
  border-radius: 10rpx;
}

.useDis i-icon {
  position: relative;
  left: 2rpx;
}

.cal-list {
  position: absolute;
  right: 0;
}

.cal {
  font-size: 30rpx;
  position: relative;
  left: 222px;
  bottom: -1rpx;
}

.price-container {
  position: absolute;
  font-weight: bold;
  right: 0;
}

.cal-sign {
  font-size: 30rpx;
}

.cal-price {
  font-weight: bold;
}

.shopCart {
  height: 100rpx;
  width: 100%;
  background-color: #333;
  display: flex;
  position: fixed;
  bottom: 0;
}

.cart-left {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9e9e9e;
  flex: 1;
  font-size: 24rpx;
}

.cart-price {
  position: absolute;
  color: white;
  font-size: 50rpx;
  left: 34rpx;
  top: 16rpx;
  width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cart-right-count {
  width: 218rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 30rpx;
  background: #58d178;
  color: #fff;
  z-index: 3;
  height: 100%;
}

button {
  position: relative;
  display: block;
  margin-left: 0;
  margin-right: 0;
  padding-left: 0;
  padding-right: 0;
  box-sizing: border-box;
  font-size: 0;
  text-align: none;
  text-decoration: none;
  line-height: none;
  border-radius: 0;
  -webkit-tap-highlight-color: none;
  overflow: hidden;
  color: #000;
  background-color: none;
}
