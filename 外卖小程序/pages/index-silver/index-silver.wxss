/* pages/index/silver/sliver.wxss */

page {
  background: #f2f7fa;
}

.sliver-top {
  width: 100%;
  height: 100%;
}

.button {
  position: absolute;
  height: 100rpx;
  width: 264rpx;
  background: transparent;
  z-index: 9;
  right: 0;
  bottom: 0;
}

