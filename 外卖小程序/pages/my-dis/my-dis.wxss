.ad {
  width: 100%;
  height: 488rpx;
}

.ad image {
  height: 100%;
  width: 100%;
}

.container {
  position: fixed;
  height: 100%;
  width: 100%;
  background: #e6e6e7;
}

.coupon-list {
  display: flex;
  width: 100%;
  align-items: center;
  flex-direction: column;
  padding-top: 30rpx;
}

view.index--coupon:after, view.index--coupon:before {
  background-color: #e6e6e7;
}

/* 优惠券 */

.coupon {
  width: 676rpx;
  height: 180rpx;
  background: white;
  position: relative;
  margin-bottom: 30rpx;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 3;
  background: rgba(240, 235, 235, 0.3);
}

.coupon:after {
  position: absolute;
  content: "";
  left: 180rpx;
  top: -20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #e6e6e7;
}

.coupon:before {
  position: absolute;
  content: "";
  left: 180rpx;
  bottom: -20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #e6e6e7;
}

.price {
  font-size: 80rpx;
  color: #ec6045;
}

.number {
  color: #ec6045;
  font-size: 30rpx;
  font-weight: bold;
  position: relative;
  top: 18rpx;
}

.title {
  position: absolute;
  left: 240rpx;
  top: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.place, .fill, .date {
  position: absolute;
  color: #9a9a9a;
  left: 240rpx;
  font-size: 24rpx;
}

.place {
  top: 60rpx;
}

.fill {
  top: 100rpx;
}

.date {
  top: 140rpx;
  color: black;
}

.receive {
  position: absolute;
  right: 20rpx;
  top: 64rpx;
  padding: 14rpx 20rpx;
  color: white;
  font-size: 24rpx;
  background: #ec6045;
  border-radius: 30rpx;
}

.box {
  height: 180rpx;
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 没有订单 */

.noOrder {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  height: 100%;
  background: #f2f7fa;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #a4a4a4;
  z-index: 999;
}
