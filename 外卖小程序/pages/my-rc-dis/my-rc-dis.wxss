.ad {
  width: 100%;
  height: 488rpx;
}

.ad image {
  height: 100%;
  width: 100%;
}

.container {
  position: fixed;
  height: 100%;
  width: 100%;
  background: #f3d660;
}

.coupon-list {
  display: flex;
  width: 100%;
  align-items: center;
  flex-direction: column;
  padding-top: 30rpx;
}

view.index--coupon:after, view.index--coupon:before {
  background-color: #f3d660;
}

.noOrder {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  height: 100%;
  background: #f2f7fa;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #a4a4a4;
  z-index: 999;
}
