.container {
  height: 230rpx;
  background: #ff8040;
  position: relative;
}

.top-img {
  position: absolute;
  top: 24rpx;
  left: 28rpx;
  width: 152rpx;
  height: 152rpx;
  background: #e9e9e7;
  border-radius: 50%;
}

.top-text {
  position: absolute;
  left: 212rpx;
  color: #fff;
  font-weight: bold;
}

.top-text text {
  display: block;
  color: white;
  font-weight: lighter;
}

.text-top {
  font-size: 34rpx;
  margin-bottom: 14rpx;
}

.text-mid, .text-bottom {
  font-size: 24rpx;
  margin-bottom: 26rpx;
}
