.container {
  width: 100%;
  height: auto;
  display: block;
}

.container .balance-item{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  display: flex;
  border-top: 2rpx solid #F4F4F4;
  background: #fff;
}

.container .balance-item .b-tit{
  width: auto;
  height: 100rpx;
  line-height: 100rpx;
  margin-right: 30rpx;
  font-size: 30rpx;
} 

.container .balance-item .b-input{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  flex: 1;
  font-size: 30rpx;
  color: #000;
} 

