/* plugins/toast/index.wxss */
.xcx-temp-contentBox{
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 999;
  animation: bounceInUp 1s ease 0s 1 both;
  -webkit-animation: bounceInUp 1s ease 0s 1 both;
}

.xcx-temp-contentBox .toast-content{
  width: 50%;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
}

.xcx-temp-contentBox .toast-content .toast-content-text{
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}