@import "/css/active.wxss";

.write {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 1000;
  top: 0;
  left: 0;
  background: #fff;
  opacity: 0;
  z-index: -1;
}

.write-title {
  color: #2d3133;
  font-size: 64rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 320rpx;
}

.write-icon {
  width: 100%;
  margin-top: 120rpx;
  display: flex;
}

.write-icon view {
  display: flex;
}

.write-icon-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.write-icon-list:active {
  opacity: 0.3;
}

.write-icon-img {
  width: 160rpx;
  height: 160rpx;
  background: #f5f5f5;
  margin-bottom: 30rpx;
  border-radius: 50%;
}

.write-icon-text {
  color: #2d3133;
  font-size: 36rpx;
}

.write-close {
  margin-top: 270rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.write-close image:active {
  opacity: 0.3;
}

.write-close image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.imgLeave {
  display: none;
}
