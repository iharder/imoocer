.user-data {
  width: 100%;
  height: 140rpx;
  color: white;
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.1);
}

.data-item {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border-right: 2rpx solid rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.3);
  position: relative;
}

.data-item view:nth-child(1) {
  font-size: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin-bottom: 16rpx;
}

.data-item view:nth-child(2) {
  font-weight: bold;
  font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
}

.data-item:last-child {
  border: none;
}

.line {
  position: absolute;
  bottom: 0;
  width: 190rpx;
  height: 8rpx;
  background: #fff;
  border-top-left-radius: 4rpx;
  border-top-right-radius: 4rpx;
}
