.xcx-plugin-login{
  width: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f4f4f4;
  z-index: 999;
  animation: bounceInUp 1s ease 0s 1 both;
  -webkit-animation: bounceInUp 1s ease 0s 1 both;
}

.login-button {
  width: 100%;
  height: auto;
  padding: 30rpx;
}

.login-button .item-login {
  width: 100%;
  height: 100rpx;
  background: #00b5de;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
  margin: 16rpx 0;
  color: #fff;
  font-size: 32rpx;
  position: relative;
}

.item-login .btn-login {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0);
}

.item-login .btn-login::after {
  border: none;
}

.login-button .item-login .icon-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  font-size: 42rpx;
}

.view-close{
  width: 100%;
  display: flex;
  position: fixed;
  justify-items: center;
  bottom: 80rpx;
}

.view-close .close-img{
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
  font-size: 40px;
  color: #00B5DE;
}
