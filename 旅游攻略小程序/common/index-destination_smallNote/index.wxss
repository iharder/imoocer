.gonglue-item {
  width: 100%;
  height: 240rpx;
}

.gonglue {
  padding: 0 30rpx;
}

.gonglue-left {
  display: inline-block;
  position: relative;
  top: 20rpx;
  width: 340rpx;
  height: 160rpx;
  margin-right: 30rpx;
}

.gonglue-title {
  color: #2d3133;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 40rpx;
}

.gonglue-right {
  display: inline-block;
  position: relative;
  top: 20rpx;
  background: #f5f5f5;
  width: 320rpx;
  height: 160rpx;
  border-radius: 16rpx;
}

.user {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
}

.user-image {
  background: #f5f5f5;
  position: absolute;
  left: 0;
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
}

.user-detail {
  position: absolute;
  left: 80rpx;
}

.user-name {
  color: #2d3133;
  font-size: 24rpx;
  font-weight: bold;
}

.user-date {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #aaafb3;
}

.user-number {
  margin-left: 40rpx;
}

.user {
  height: 100rpx;
}

.gonglue-item:active {
  opacity: 0.3;
}
