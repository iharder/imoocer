<view class='gonglue-reply'>
  <view class='reply-input'>
    <input placeholder='来了怎能不回复' placeholder-class="replyInput" bindconfirm='bindConfirm' value='{{value}}'></input>
  </view>
  <view wx:if="{{like}}" class="icon-btn iconfont icon-btn_collected" bind:tap="like" style='font-size:50rpx;position:relative;right:2rpx;bottom:2rpx;color:{{color}};'></view>
  <view wx:else class='icon-btn iconfont icon-btn_collection' bind:tap="like"></view>
  <button class='reply-share' style='background:{{color}}' open-type='share'>
    <view class='reply-share-icon iconfont icon-weixin'></view>
    <view class='reply-share-text'>分享</view>
  </button>
</view>