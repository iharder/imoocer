@import "/css/iconfont.wxss";

.gonglue-reply {
  position: fixed;
  bottom: 0;
  height: 120rpx;
  width: 100%;
  box-shadow: 0 4rpx 16rpx 4rpx rgba(0, 0, 0, 0.06);
  padding: 20rpx 16rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.reply-input {
  width: 460rpx;
  height: 80rpx;
  background: #f2f4f5;
  border-radius: 40rpx;
}

.reply-input input {
  width: 358rpx;
  margin: 0 auto;
  height: 100%;
  text-indent: 2em;
  color: #5a6266;
}

.replyInput {
  text-indent: 0;
  color: #aaafb3;
  font-size: 28rpx;
}

.reply-star {
  width: 48rpx;
  height: 48rpx;
  background: #f5f5f5;
  margin-left: 32rpx;
  margin-right: 48rpx;
}

.reply-share {
  width: 128rpx;
  height: 56rpx;
  background: #00bf63;
  color: #fff;
  font-size: 24rpx;
  border-radius: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 16rpx;
}

.reply-share-icon {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.reply-share-text {
  font-size: 24rpx;
}

.zan {
  font-size: 50rpx !important;
  color: #00bf63;
  position: relative;
  right: 2rpx;
  bottom: 2rpx;
}

.icon-btn_collection {
  font-size: 48rpx;
  margin-left: 32rpx;
}
