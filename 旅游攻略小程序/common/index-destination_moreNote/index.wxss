/* 推荐列表 */

.recommend-list {
  display: flex;
  align-items: center;
  width: 100%;
  margin: 40rpx 30rpx 40rpx;
}

.recommend-left {
  display: flex;
  flex-direction: column;
  width: 350rpx;
  height: 100%;
  justify-content: space-between;
}

.recommend-right {
  width: 320rpx;
  height: 160rpx;
  margin-left: 18rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
}

.recommend-left-one {
  font-size: 32rpx;
  color: #2d3133;
  font-weight: bold;
  line-height: 40rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.user {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.user-image {
  background: #f5f5f5;
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
}

.user-name {
  color: #2d3133;
  font-size: 24rpx;
  font-weight: bold;
}

.user-date {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #aaafb3;
}

.user-number {
  margin-left: 40rpx;
}

.comment-text {
  color: #2d3133;
  font-weight: bold;
  font-size: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
}
