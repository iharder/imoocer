/* common/write_tag/index.wxss */
@import "/css/iconfont.wxss";

/* 分类标签 */

.select-label {
  display: inline-flex;
  flex-direction: column;
  padding: 30rpx 0 30rpx 30rpx;
  border-bottom: 2rpx solid #f2f4f5;
}

.select-label>view:nth-child(1) {
  color: #2d3133;
  font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-weight: bold;
}

.select-label>view:nth-child(2) {
  color: #797d80;
  font-size: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin: 24rpx 0 32rpx 0;
}

.label {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.select-button {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  width: 160rpx;
}

.select-button:active view {
  opacity: 0.3;
}

.select-button view {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #00bf63;
  padding: 14rpx 24rpx;
  border-radius: 30rpx;
  border: 2rpx solid #00bf63;
  text-align: center;
}

.selected-button {
  border-radius: 30rpx;
  box-sizing: border-box;
  border: 2rpx solid #dfe6eb;
  color: #2d3133;
  padding: 14rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin: 0 14rpx 30rpx 0;
}

.selected-button:nth-child(2):active {
  opacity: 0.3;
}

.selected-button view {
  height: 32rpx;
  line-height: 32rpx;
}
