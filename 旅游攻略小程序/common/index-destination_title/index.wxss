.xcx-plugin-title {
  width: 100%;
  height: 116rpx;
  padding: 20rpx 30rpx 0 30rpx;
  background: #fff;
  display: inline-flex;
}

.xcx-plugin-title .ptit-lt {
  width: auto;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #2d3133;
}

.xcx-plugin-title .ptit-mid {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  flex: 1;
  -moz-box-flex: 1;
  padding: 0 25rpx;
}

.xcx-plugin-title .ptit-rt {
  width: auto;
  height: 96rpx;
  line-height: 96rpx;
  display: inline-flex;
}

.ptit-rt:active {
  opacity: 0.3;
}

.xcx-plugin-title .ptit-rt .tit-arrow {
  width: 16rpx;
  height: 28rpx;
  margin-top: 34rpx;
}

.xcx-plugin-title .ptit-rt .tit-more {
  height: 96rpx;
  line-height: 96rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #5a6266;
}
