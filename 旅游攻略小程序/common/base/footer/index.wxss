/* components/footer/index.wxss */
@import '/css/strategy.wxss';

.xcx-footer-container {
  width: 100%;
  height: 100rpx;
  display: inline-flex;
  background: #fff;
  position: fixed;
  bottom: 0;
  border-top: 2rpx #eaeaea solid;
  z-index: 999;
}

.xcx-footer-container .footer-tab {
  width: 25%;
  height: 90rpx;
  display: inline-block;
  text-align: center;
  margin-top: 10rpx;
}

.tab-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer-tab .icon {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  font-size: 40rpx;
}

.footer-tab .icon2 {
  width: auto;
  height: auto;
  display: inline-block;
  font-size: 80rpx;
}

.footer-tab .name {
  width: auto;
  height: auto;
  color: #999;
  font-size: 22rpx;
}
