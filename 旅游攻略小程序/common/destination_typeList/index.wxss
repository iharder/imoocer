.destinationdetailQunawan {
  padding: 30rpx 0 30rpx 30rpx;
  background: #f7f9fa;
}

.detailQunawan-slide {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.detailQunawan-slide .active {
  background: #00bf63;
  color: #fff;
  border: 2rpx solid transparent;
}

.detailQunawan-slideitem {
  background: #fff;
  color: #2d3133;
  box-sizing: border-box;
  border: 2rpx solid #dfe6eb;
  font-size: 32rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  padding: 0 26rpx 0 24rpx;
}

.detailQunawan-slideitem view {
  width: auto;
  display: flex;
  height: 68rpx;
  line-height: 68rpx;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
