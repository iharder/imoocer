/* components/common/headBtn/index.wxss */

.container {
  border: 2rpx solid #f2f4f5;
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  background: #fff;
  box-shadow: 0 4rpx 12rpx 4rpx rgba(223, 230, 235, 0.3);
  padding: 0 30rpx;
}

.left {
  position: absolute;
  left: 30rpx;
  font-size: 32rpx;
  color: #5a6266;
}

.mid {
  color: #000000;
  font-size: 36rpx;
  margin: 0 auto;
}

.right {
  position: absolute;
  right: 30rpx;
  font-size: 32rpx;
  color: #00bf63;
}
