/* components/common/headBtn/index.wxss */

.container {
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  background: #fff;
  box-shadow: 0 4rpx 12rpx 4rpx rgba(223, 230, 235, 0.3);
  padding: 0 30rpx;
  position: absolute;
  top: 0;
}

.left {
  position: absolute;
  left: 30rpx;
  font-size: 32rpx;
  color: #5a6266;
  width: 100rpx;
  text-align: left;
}

.left:active {
  color: rgba(0, 0, 0, 0.3);
}

.mid {
  color: #000;
  font-size: 36rpx;
  margin: 0 auto;
  font-weight: bold;
}

.right {
  position: absolute;
  right: 30rpx;
  font-size: 32rpx;
  color: #00bf63;
  width: 100rpx;
  text-align: right;
}

.right:active {
  opacity: 0.3;
}
