@import "/css/strategy.wxss";

.destinationdetailWancontent {
  padding: 0 0 0 30rpx;
  background: #f7f9fa;
}

.detailWancontent:active {
  opacity: 0.3;
}

.detailWancontent {
  background: #fff;
  display: inline-block;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  width: 330rpx;
  height: 288rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx 4rpx rgba(223, 230, 235, 0.3);
}

.detailWancontent-img {
  width: 100%;
  height: 164rpx;
  background: black;
}

.detailWancontent-text {
  padding: 24rpx 0 0 20rpx;
  height: 144rpx;
  width: 100%;
}

.detailWancontent-text view:nth-child(1) {
  color: #2d3133;
  font-size: 28rpx;
  font-weight: bold;
  height: 28rpx;
  line-height: 28rpx;
  margin-bottom: 24rpx;
}

.detailWancontent-text view:nth-child(2) {
  color: #aaafb3;
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
}

.detailWancontent-batch {
  display: flex;
  align-items: center;
  justify-content: center;
}

.detailWancontent-batch:active view {
  opacity: 0.3;
}

.detailWancontent-batch view:nth-child(1) {
  margin-right: 16rpx;
}

.detailWancontent-batch view:nth-child(2) {
  font-size: 28rpx;
  color: #00bf63;
  font-weight: bold;
  height: 28rpx;
  line-height: 28rpx;
}

.icon-btn_update {
  color: #00bf63;
  font-size: 40rpx;
}
