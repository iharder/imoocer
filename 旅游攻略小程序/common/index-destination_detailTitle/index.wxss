@import "/css/strategy.wxss";

.gld-header {
  height: 140rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx 4rpx rgab(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  background: #fff;
  border-top: 2rpx solid #f2f4f5;
}

.user-concern {
  position: absolute;
  right: 30rpx;
  top: 38rpx;
  width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background: #00bf63;
  border-radius: 32rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.user-concern>view {
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-concern text {
  height: 100%;
}

.user-concerned {
  background: #c2c8cc;
  color: #fff;
}

.user {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.user-image {
  background: #f5f5f5;
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
}

.user-name {
  color: #2d3133;
  font-size: 24rpx;
  font-weight: bold;
}

.user-date {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #aaafb3;
}

.user-number {
  margin-left: 40rpx;
}

.user {
  height: 100rpx;
}
