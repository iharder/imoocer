/* pages/center/strategied/index.wxss */
@import "/css/iconfont.wxss";

page {
  background: #fff;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.sucess-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #00bf63;
  color: #fff;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sucess-icon text {
  position: relative;
  left: 4rpx;
}

.sucess-text {
  font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #2d3133;
  margin-top: 48rpx;
  margin-bottom: 80rpx;
}

.iconfontPub {
  margin: 0;
}

.sucess-button {
  width: 690rpx;
  height: 96rpx;
  background: #00bf63;
  border-radius: 48rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.sucess-button view:nth-child(1) {
  margin-right: 9rpx;
}

.sucess-button view:nth-child(2) {
  margin-left: 9rpx;
}

.sucess-box {
  width: 690rpx;
  height: 224rpx;
  box-shadow: 0 4rpx 12rpx 4rpx rgba(223, 230, 235, 0.3);
  margin-bottom: 30rpx;
  padding: 40rpx 0;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.sucess-box view {
  display: flex;
  justify-content: center;
  align-items: center;
}

.sucess-box>view:nth-child(1) {
  color: rgba(121, 125, 128, 1);
  font-size: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin-bottom: 24rpx;
}

.sucess-box>view:nth-child(2) {
  font-weight: bold;
  color: #ffae19;
  font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin-bottom: 32rpx;
}

.sucess-box>view:nth-child(3) {
  color: #00bf63;
  font-size: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
}
