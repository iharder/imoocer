/* pages/center/search-destination/index.wxss */
@import "/css/iconfont.wxss";

.search {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  background: #fff;
  box-shadow: 0 4rpx 12rpx 4rpx rgba(223, 230, 235, 0.3);
  position: relative;
}

.iconfontPub {
  margin: 0;
}

.search-input input {
  width: 100%;
  height: 100%;
  line-height: 28rpx;
  font-size: 28rpx;
  color: #2d3133;
}

.search-input {
  position: absolute;
  width: 500rpx;
  height: 100%;
}

.icon-btn_reset {
  margin: 0 30rpx 0 544rpx;
  color: #c2c8cc;
}

.search-line {
  height: 40rpx;
  width: 2rpx;
  background: #f2f4f5;
  margin-right: 30rpx;
}

.icon-btn_search {
  color: #00bf63;
}

.no-destination {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 200rpx;
  color: #797d80;
  font-size: 32rpx;
}

.no-destination image {
  width: 160rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}
