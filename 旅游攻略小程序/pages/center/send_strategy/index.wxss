/* pages/center/send-strategy/index.wxss */
@import "/css/strategy.wxss";

page {
  background: #fff;
}

.strategyImgtext-left:active text:nth-child(2),
.strategyImgtext-right:active text:nth-child(2) {
  color: rgba(0, 0, 0, 0.3);
}

.strategyImgtext-left:active text:nth-child(1),
.strategyImgtext-right:active text:nth-child(1) {
  color: rgba(0, 191, 99, 0.3);
}

/* 提示文字 */

.strategy-txt {
  padding: 128rpx 0 0 30rpx;
}

.strategy-txt view:nth-child(1) {
  font-size: 32rpx;
  margin-bottom: 24rpx;
  color: #2d3133;
  font-weight: bold;
  height: 32rpx;
  line-height: 32rpx;
}

.strategy-txt view:nth-child(2) {
  font-size: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: #797d80;
}

/* 添加图片或者文字 */

.strategyImgtext {
  display: flex;
  align-items: center;
  padding-top: 46rpx;
}

.strategyImgtext-mid {
  width: 2rpx;
  background: #f2f4f5;
  height: 124rpx;
}

.strategyImgtext-right, .strategyImgtext-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.strategyImgtext-right image, .strategyImgtext-left image {
  width: 60rpx;
  height: 60rpx;
  background: #00bf63;
  margin-bottom: 32rpx;
}

.text {
  font-size: 32rpx;
  color: #5a6266;
  height: 32rpx;
  line-height: 32rpx;
}

.iconfont {
  color: #00bf63;
  font-size: 60rpx;
  margin-bottom: 32rpx;
}

/* 分类标签 */

.select-label {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0 30rpx 30rpx;
  border-bottom: 2rpx solid #f2f4f5;
}

.select-label>view:nth-child(1) {
  color: #2d3133;
  font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-weight: bold;
}

.select-label>view:nth-child(2) {
  color: #797d80;
  font-size: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin: 24rpx 0 32rpx 0;
}

.label {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.select-button {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.select-button:active view {
  opacity: 0.3;
}

.select-button view {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #00bf63;
  padding: 14rpx 24rpx;
  border-radius: 30rpx;
  border: 2rpx solid #00bf63;
  text-align: center;
}

.selected-button {
  border-radius: 30rpx;
  box-sizing: border-box;
  border: 2rpx solid #dfe6eb;
  color: #2d3133;
  padding: 14rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin: 0 14rpx 30rpx 0;
}

.selected-button:nth-child(2):active {
  opacity: 0.3;
}

.selected-button view {
  height: 32rpx;
  line-height: 32rpx;
}

/* 顶部图片 */

.img {
  width: 100%;
  height: 376rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgb(248, 248, 248);
  color: rgb(193, 193, 193);
  font-size: 30rpx;
}

.img>image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.changeCover {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 40rpx;
  padding: 20rpx 24rpx;
  color: #fff;
  z-index: 99;
}

.changeCover:active view, .changeCover:active image {
  opacity: 0.3;
}

.changeCover text {
  display: inline-block;
  font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin-left: 16rpx;
}

.changeCover image {
  width: 40rpx;
  height: 40rpx;
}

.tip {
  position: absolute;
  top: 1050rpx;
  right: 30rpx;
  width: 280rpx;
  height: 158rpx;
  background: white;
  box-shadow: 0 4rpx 12rpx 4rpx rgba(223, 230, 235, 0.3);
  padding: 16rpx 20rpx;
}

.tip text {
  font-size: 28rpx;
  height: 28rpx;
  color: #2d3133;
  line-height: 40rpx;
}

.arrow {
  position: absolute;
  top: 1100rpx;
  right: 310rpx;
  width: 40rpx;
  height: 40rpx;
}

.icon-btn_close1 {
  font-size: 28rpx;
  color: rgb(194, 200, 204);
}

.icon-iconjia-copy {
  color: rgb(193, 193, 193);
}
