page {
  background: #fff;
}

/* 用户头部 */

.user-container {
  width: 750rpx;
  height: 388rpx;
  /* background: linear-gradient(to right, #01c192, #00bf63); */
  position: relative;
}

.user-container>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.user-header {
  width: 100%;
  height: 248rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx 0 40rpx;
}

.user-header>image {
  width: 128rpx;
  height: 128rpx;
  background: #f5f5f5;
  border: 2rpx solid #f2f4f5;
  box-sizing: border-box;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-header>view:nth-of-type(1) {
  display: flex;
  flex-direction: column;
  align-items: left;
  color: #fff;
}

.user-header>view:nth-of-type(1)>view:nth-child(1) {
  font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  font-weight: bold;
}

.user-header>view:nth-of-type(1)>view:nth-child(2) {
  display: flex;
  font-size: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-button {
  width: 180rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 40rpx;
  position: absolute;
  right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #00bf63;
}

.user-button view:nth-child(2) {
  margin-left: 16rpx;
  font-size: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-weight: bold;
}
