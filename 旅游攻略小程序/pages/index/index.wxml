  </view>
  <view class='tb-item' data-index="1" bind:tap="loadDetail">
    <view class='top-box'>
      <image class='tb-icon' src='/image/index/icon_nav02@2x.png'></image>
    </view>
    <view class='tb-name'>去哪住</view>
  </view>
  <view class='tb-item' data-index="2" bind:tap="loadDetail">
    <view class='top-box'>
      <image class='tb-icon' src='/image/index/icon_nav03@2x.png'></image>
    </view>
    <view class='tb-name'>去哪吃</view>
  </view>
  <view class='tb-item' data-index="3" bind:tap="loadDetail">
