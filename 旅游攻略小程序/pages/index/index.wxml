<write writeMask="{{write.writeMask}}" />
<!-- 搜索框 -->
<view class='xcx-plugin-search'>
  <view class='search-box'>
    <view class='s-lt'>
      <text class='lt-text'>合肥</text>
      <text class='arrow iconfont icon-btn_arrowr_blue' style='font-size:28rpx;'></text>
      <text class='line'></text>
    </view>
    <input class='s-mid' placeholder='搜索目的地、酒店等' placeholder-style='color:#C2C8CC; font-size:28rpx;' value='{{write.inputValue}}' bindblur='bindBlur' bindinput='bindInput'></input>
    <view class='s-rt'>
      <view class='icon-search'>
        <text class='iconfont icon-btn_reset' style='font-size:44rpx;color:#c2c8cc;margin-right:30rpx;' hidden="{{write.inputValue==''}}" bind:tap="close"></text>
        <text class='line'></text>
        <text class='iconfont icon-btn_search' style='font-size:40rpx;color:#00BF63;margin-left:30rpx;'></text>
      </view>
    </view>
  </view>
</view>
<!-- banner栏 -->
<view class="xcx_plugin_lunbo" style='height: 250rpx; padding-bottom: 15rpx;'>
  <swiper class='swiper-box' autoplay="{{true}}" interval="5000" circular="{{true}}">
    <swiper-item>
      <image src="/image/index/banner@2x.png" style='width:690rpx; max-height:94%;margin:0 auto;border-radius: 16rpx;' />
    </swiper-item>
    <swiper-item>
      <image src="/image/index/banner@2x.png" style='width:690rpx; max-height:94%;margin:0 auto;border-radius: 16rpx;' />
    </swiper-item>
  </swiper>
</view>
<!-- 图标 -->
