@import "/css/iconfont.wxss";

page {
  background: #fff;
}

/* 回复框 */

.gonglue-reply {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 20rpx 0;
  background: #fff;
  z-index: 9;
  box-shadow: 0 4rpx 16rpx 4rpx rgba(0, 0, 0, 0.06);
}

.replyed-input {
  width: 720rpx;
  height: 80rpx;
  background: #f2f4f5;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
}

.replyed-input input {
  height: 100%;
  padding-left: 30rpx;
  color: #5a6266;
  flex: 1;
}

.replyedInput {
  color: #aaafb3;
  font-size: 28rpx;
}

/* 输入框 */

.replayOne {
  width: 100%;
  height: 100rpx;
  background: #fff;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
}

.replayOne input {
  width: 100%;
  height: 32rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  color: #5a6266;
}
